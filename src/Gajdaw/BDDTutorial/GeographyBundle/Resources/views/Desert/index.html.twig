{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Desert list</h1>

    <table class="table table-striped">

            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Area</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for entity in entities %}
                <tr>
                <td>{{ loop.index }}.</td>
                    <td><a href="{{ path('desert_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                    <td>{{ entity.depth }}</td>
                    <td>
                    <a href="{{ path('desert_show', { 'id': entity.id }) }}" class="btn btn-default" role="button">show</a>
                    <a href="{{ path('desert_edit', { 'id': entity.id }) }}" class="btn btn-default" role="button">edit</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <ul>
        <li>
            <a href="{{ path('desert_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
